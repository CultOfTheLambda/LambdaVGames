<UserControl x:Class="LambdaVGames.Controls.ImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Image Name="Image" Stretch="Fill"/>
        
        <Button Content="📂" IsEnabled="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5" Width="20" Height="20" Click="LoadImage_Click"/>
    </Grid>
</UserControl>
